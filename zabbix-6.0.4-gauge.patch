+                        	ZBX_WIDGET_GAUGE_INDICATOR_ANNOY => _x('Annoying','Warning light behavior')
+                	]))
+                        	->setDefault(0);
+
+                	if (array_key_exists($light, $this->data)) {
+                        	$region_light[$num]->setValue($this->data[$light]);
+                	}
+                	$this->fields[$region_light[$num]->getName()] = $region_light[$num];
+		}
+	}
+}
